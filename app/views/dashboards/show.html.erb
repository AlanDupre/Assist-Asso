<div>
  <h1 id="h1-dashboard">DASHBOARD <img src="https://image.flaticon.com/icons/png/512/1548/1548723.png" style="width: 50px;"></h1> 
<div class="dashboard-container" style="margin-top: 40px; margin-left: 40px;">

<div class="infos-dashboard">
    <div id="avatar-dashboard">
      <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRtuWNoGqQAQmyVewoCljthAEpQKkLVcKguug&usqp=CAU" class="avatar-dashboard">
    </div>
    <div class="infos-user">
    <h3 id="username-dashboard"><%= @user.first_name %> <%= @user.last_name %></h3>
    <div class="socials-asso">
      <i class="fab fa-instagram"></i>
      <i class="fab fa-facebook"></i>
      <i class="fab fa-twitter"></i>
    </div>
    </div>
</div>

<div class="d-flex flex-column">
  <nav class="nav nav-tabs">
    <% if current_user.events.size > 0 %>
      <a class="nav-item nav-link active" href="#p1" data-toggle="tab">MY EVENTS</a>
    <% end %>
      <%# <a class="nav-item nav-link" href="#p2" data-toggle="tab">WISHLIST EVENTS</a> %>
  </nav>
  <div class="tab-content">
    <div class="tab-pane fade show active" id="p1">
      <% @events.each_with_index do |event, index| %>
        <div class="card-dashboard">
         <%= cl_image_tag event.cover_img.key, class: "card-img-top" %>
          <div class="card-dashboard-infos">
            <h2><%= event.name %></h2> 
              <p><%= event.description %></p>

            <div class="progress" style="width: 300px; height: 20px; background-color: white; border-radius: 20px; margin-top: 10px">
              <div class="progress-bar bg-success" style="width: <%= @percent[index] %>%;" role="progressbar" aria-valuenow="<%= @percent[index] %>" aria-valuemin="0" aria-valuemax="100"> <%= @percent[index] %> %</div> 
            </div>
          </div>
          <div class="discover" style="margin-left: 200px; margin-top: 50px;">
            <%= link_to "Explore", event_path(event), class: "all-button" %>
          </div>
          <div class="action" style="margin-bottom: 60px;">
           <%= link_to event_path(event), method: :delete do  %>
              <img style="width: 20px;" src="https://image.flaticon.com/icons/png/512/2087/2087868.png" >
            <% end %>
            <%= link_to  edit_event_path(event)  do %>
            <img style="width: 20px;" src="https://image.flaticon.com/icons/png/512/1160/1160515.png">
            <% end %>
          </div>
        </div>
        <% end  %>    
      </div>
    </div>
  </div>
</div>

<div style="margin-top: 100px;x">
        <%= link_to "CREATE +", new_event_path, class: "all-button" %>
</div>
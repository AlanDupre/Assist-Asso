<div class="need-new">
  <% @event.needs.each do |need| %>
    <div class="need">
      <div class="d-flex justify-content-between align-items-center">
      <div class="need-category"> 
        <% if need.category == "People" %>
          <img style="width: 30px" src="https://image.flaticon.com/icons/png/512/681/681392.png">
        <% elsif need.category == "Money" %>
          <img style="width: 30px" src="https://image.flaticon.com/icons/png/512/3135/3135706.png">
        <% elsif need.category == "Food" %>
          <img style="width: 30px" src="https://image.flaticon.com/icons/png/512/498/498229.png">
        <% elsif need.category == "Furnitures" %>
          <img style="width: 30px" src="https://image.flaticon.com/icons/png/512/2708/2708109.png">
        <% else  %>
          <%= need.category %>
        <% end %>
        </div>




        <div class="need-name">
         <%= need.name %>
        </div>
 
        <div class="donation">
          <% donation_array = need.donations.map do |donation| %>
            <% donation.quantity %>
          <% end %>
          <%= donation_quantity = donation_array.reduce(0,:+) %>
        </div>
        <div>
          <p>/</p>
        </div>
        <div class="quantity">
          <%= need.quantity %>
        </div>
        <div class="event-management">
          <!-- Button trigger modal -->
          <% if donation_quantity < need.quantity %>
            <button type="button" class="btn btn-success" style="border-radius: 16px" data-toggle="modal" data-target="#exampleModal-<%=need.id%>">
          ❤️ Give
            </button>
          <% end %>

          <%# admin-buttons %>
          <%= link_to "✏️", edit_need_path(need)  %>
          <%= link_to "❌", need_path(need), method: :delete %>
        </div>
      </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="exampleModal-<%=need.id%>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Nom de l'item</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <%= simple_form_for [need, @donation] do |f| %>
            <%= f.input :quantity %>
            <%= f.button :submit %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>


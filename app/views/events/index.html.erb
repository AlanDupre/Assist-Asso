
<h1 class="title">DISCOVER ALL THE EVENTS</h1>
<div class="container align-items-left card-home">

  <div class="card-category"">
    <%= link_to events_path(:category => "Environment") do%>
      <img class="icone-category" src="https://image.flaticon.com/icons/png/512/1598/1598196.png">
    <% end %>
  </div>
   
  <div class="card-category">
    <%= link_to events_path(:category => "Alimentation") do%>
     <img class="icone-category" src="https://image.flaticon.com/icons/png/512/3050/3050228.png">
    <% end %>
    
  </div>

  <div class="card-category" >
    <%= link_to events_path(:category => "Solidarity") do%>
      <img class="icone-category" src="https://image.flaticon.com/icons/png/512/3047/3047883.png">
    <% end %>
  </div>

  <div class="card-category" >
    <%= link_to events_path(:category => "Cultural") do %>
    <img class="icone-category" src="https://image.flaticon.com/icons/png/512/1344/1344461.png">
    <% end %>
  </div>
</div>

  
       <%= form_tag events_path, method: :get do %>
      <div class="d-flex search">
        <%= text_field_tag :query, params[:query], class: "form-control", placeholder: "Find a Event" %>
        <%= submit_tag "Search", class: "btn btn-success" %>
      </div>
      <% end %>
  
   

<div class="d-flex">
  <div class="col-8">
  <% @events.each do |event| %>
    <%= render "shared/cards", event: event %>
    <% end %>
  </div>
    <%= render "shared/map" %>
</div>

 

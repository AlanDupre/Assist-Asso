<%= render 'shared/event_banner' %>

<div class="event-management d-flex justify-content-end">      
  <%= link_to "Back to all events", events_path, class: "btn btn-info"  %>     
  <%= link_to "✏️ Edit your event", edit_event_path(@event), class: "btn btn-primary" %>     
  <%= link_to "❌ Delete your event", event_path, method: :delete, class: "btn btn-danger"  %>    
</div> 

<div class="d-flex justify-content-around">  
  <div class="infos">   
    <div>
      <h1 class="mt-4"><%= @event.name %></h1>  
      <p><%= @event.description %></p>    
      <%= render 'shared/need' %>    
      <%= link_to "Add a need", new_event_need_path(@event), class: "btn btn-primary" %>  
    </div>
  </div>   
   <%= render "shared/map" %>
</div>
